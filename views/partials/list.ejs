<div class="mx-auto max-w-7xl min-w-5xl px-4">
    <ul role="list" class="space-y-3">
        <% labs.forEach(lab => { %>
        <li class="overflow-hidden rounded-md bg-white px-6 py-4 shadow">
            <x-placeholder>
                <div class="relative flex justify-between items-center overflow-hidden">
                    <div class="w-auto flex flex-col gap-2">
                        <p class="text-sm font-bold"><%= lab.title %></p>
                        <p class="text-sm text-gray-500"><%= lab.description %></p>
                        <a href="<%= lab.link %>" class="text-sm text-indigo-600 hover:text-indigo-500">User Guide</a>
                    </div>
                    <div class="w-[150px] shrink-0 ml-4 flex gap-4 items-center justify-start">
                        <% 
                        if (assignments.some(assignment => assignment.lab_id === lab.id)) { 
                        %>
                            <a href="/vlab/lab/<%= lab.id %>" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-medium text-white">Details</a>
                        <% } else { %>
                            <div class="rounded-md bg-indigo-200 px-3 py-2 text-sm font-medium text-gray-600">Not assigned</div>
                        <% } %>
                    </div>
                </div>
            </x-placeholder>
        </li>
        <% }) %>
    </ul>
</div>