<div class="max-w-7xl min-w-6xl mx-auto px-4 grid grid-cols-5 gap-4">
  <dt class="flex flex-1 flex-col border-gray-200 bg-white px-2 min-w-40">
    <ul class="flex flex-col gap-2 py-4">
      <% navItems.forEach(item=> { %>
        <li>
          <div>
            <div class="w-full px-4 py-1 text-left text-sm font-semibold text-gray-700 whitespace-nowrap">
              <%= item.title %>
            </div>
            <ul class="flex flex-col gap-1">
              <% item.children.forEach(child=> { %>
                <li>
                  <a href="<%= child.url %>" class="block rounded-md px-6 py-1 text-sm text-gray-700 hover:bg-gray-200 whitespace-nowrap">
                    <%= child.title %>
                  </a>
                </li>
                <% }); %>
            </ul>
          </div>
        </li>
        <% }); %>
    </ul>
  </dt>
  <dd class="col-span-4 min-w-96">
    <div class="p-4">
      <%- content ? include(`${content}`) : '<div class="text-sm text-gray-500">Welcome to the admin page.</div>' %>
    </div>
  </dd>
</div>